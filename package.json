{
  "name": "@volkovasystem/trigger",
  "version": "0.0.2",
  "description": "Trigger class interface for procedure issue flow.",
  "main": "trigger.js",
  "scripts": {
    "test": "node ./trigger.test.js",
    "clean": "rm -Rfv ./node_modules && rm ./trigger.js",
    "compress": "npx terser ./trigger.module.js --compress --comments all --output ./trigger.js",
    "modularize": "npx babel --plugins @babel/plugin-transform-modules-umd ./trigger.js --out-file ./trigger.js",
    "minify": "npx terser ./trigger.js --compress --comments all --output ./trigger.js",
    "build": "npm run compress && npm run modularize && npm run minify",
    "deploy": "npm run clean && npm install && npm run build && npm test",
    "prepublishOnly": "npm run clean && npm install && npm run build && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/volkovasystem/trigger.git"
  },
  "keywords": [
    "trigger",
    "error",
    "issue",
    "abort"
  ],
  "author": "Richeve S. Bebedor <richeve.bebedor@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/volkovasystem/trigger/issues"
  },
  "homepage": "https://github.com/volkovasystem/trigger#readme",
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.0",
    "@babel/plugin-transform-modules-umd": "^7.9.0"
  }
}
